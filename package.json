{
  "name": "Store-Manager-React",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/tomuhenry/Store-Manager-React.git",
  "author": "tomuhenry <tomusangehenry02@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "webpack --mode production",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "cypress:open": "cypress open",
    "heroku-postbuild": "npm run build",
    "start": "webpack-dev-server --config ./webpack.config.js --mode development --hot --open --https"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/setupTests.js",
      "<rootDir>/cypress"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/src/store/combineStore.js",
      "<rootDir>/src/index.js",
      "<rootDir>/src/reducers/mainReducer.js",
      "<rootDir>/src/routes/index.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^24.1.0",
    "react-hot-loader": "^4.7.2",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.8.4",
    "redux-mock-store": "^1.5.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  },
  "dependencies": {
    "cypress": "^3.1.5",
    "express": "^4.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  }
}
